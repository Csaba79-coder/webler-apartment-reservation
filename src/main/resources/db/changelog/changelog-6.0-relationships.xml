<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
            https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="addApartmentRelationshipToAddress" author="futopeter97">
        <addColumn tableName="apartment">
            <column name="address_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addForeignKeyConstraint baseTableName="apartment" baseColumnNames="address_id"
                                 constraintName="FK_apartment_address"
                                 referencedTableName="address" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>

    <changeSet id="addUserRelationshipToUser" author="futopeter97">
        <addForeignKeyConstraint baseTableName="reservation_user" baseColumnNames="id"
                                 constraintName="FK_user_address"
                                 referencedTableName="address" referencedColumnNames="id"/>
    </changeSet>

    <changeSet id="addInvoiceRelationshipToAddress" author="futopeter97">
        <addColumn tableName="invoice">
            <column name="address_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addForeignKeyConstraint baseTableName="invoice" baseColumnNames="address_id"
                                 constraintName="FK_invoice_address"
                                 referencedTableName="address" referencedColumnNames="id"
                                 onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>