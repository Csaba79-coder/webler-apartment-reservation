<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="createApartmentTable" author="Rol1991">
        <createTable tableName="Apartment">
            <column name="id" type="BIGINT" autoIncrement="true" >
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="floorNumber" type="Integer">
                <constraints nullable="false"/>
            </column>
            <column name="roomNumber" type="Integer">
                <constraints nullable="false"/>
            </column>
            <column name="minGuest" type="Integer">
                <constraints nullable="false"/>
            </column>
            <column name="maxGuest" type="Integer">
                <constraints nullable="false"/>
            </column>
            <column name="apartmentType" type="ENUM">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="apartmentStatus" type="ENUM">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="BigDecimal">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>